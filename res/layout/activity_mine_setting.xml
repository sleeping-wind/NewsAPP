<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e3e5"
    android:orientation="vertical" >
         
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="8dp"
	    android:background="#ffffff">
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:layout_centerInParent="true"
	        android:text="设置"/>
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="1dp"
	    android:background="#ffffff">
	    
	   
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:text="编辑资料"/>
	    
	    
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:textColor="#a7abae"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="&gt;"/>  
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="1dp"
	    android:background="#ffffff">
	    
	   
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:text="账号与安全"/>
	    
	    
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:textColor="#a7abae"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="&gt;"/>  
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="8dp"
	    android:background="#ffffff">
	    
	   
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:text="隐私"/>
	    
	    
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:textColor="#a7abae"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="&gt;"/>  
	</RelativeLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="1dp"
	    android:background="#ffffff">
	    
	   
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:text="夜间模式"/>
	    
	    
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:textColor="#a7abae"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="&gt;"/>  
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="8dp"
	    android:background="#ffffff">
	    
	   
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:text="字体大小"/>
	    
	    
	     <TextView 
	         android:id="@+id/tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:textColor="#a7abae"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="&gt;"/>  
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/tv"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:textColor="#a7abae"
	        android:text="标准"/>   
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="1dp"
	    android:background="#ffffff">
	    
	   
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:text="清除缓存"/>
	    
	    
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:textColor="#a7abae"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="&gt;"/>  
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="1dp"
	    android:background="#ffffff">
	    
	   
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:text="播放与网络设置"/>
	    
	    
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:textColor="#a7abae"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="&gt;"/>  
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginBottom="8dp"
	    android:background="#ffffff">
	    
	   
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:text="推送通知设置"/>
	    
	    
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp"
	        android:textColor="#a7abae"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="&gt;"/>  
	</RelativeLayout>
	


	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="#ffffff" >
	     
	    <TextView 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:textColor="#cc0002"
		    android:layout_centerInParent="true"
		    android:text="退出登录"/>
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.5"
	    android:background="#e1e3e5" >    
	</RelativeLayout>
	
</LinearLayout>
